DATABASE_URL="postgresql://<USERNAME>:<PASSWORD>@<HOST>:<PORT>/<DATABASE>"

# JWT Secrets
JWT_SECRET=your-super-secret-key-that-is-long-and-random   # 替换成一个你自己的、复杂的、随机的字符串
JWT_EXPIRATION_TIME=3600s                                 # Access Token 过期时间 (例如: 1小时)
JWT_REFRESH_SECRET=another-super-secret-for-refresh-token # 为 Refresh Token 使用一个不同的密钥
JWT_REFRESH_EXPIRATION_TIME=7d                            # Refresh Token 过期时间 (例如: 7天)

# WeChat Mini Program Credentials
WECHAT_APPID=your_wechat_appid         # 替换成你的微信小程序的 AppID
WECHAT_SECRET=your_wechat_appsecret    # 替换成你的微信小程序的 AppSecret