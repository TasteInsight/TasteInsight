# --- Application Configuration ---
APP_PORT=80
# localhost 应该替换为你的实际域名或 IP 地址
APP_URL=http://localhost:80

# --- Initial Superadmin Configuration (Effective only if no admins exist in the database) ---
INITIAL_ADMIN_USERNAME=your_admin_username
INITIAL_ADMIN_PASSWORD=your_secure_password

# --- Database Configuration ---
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=your_postgres_port
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_postgres_db
# Docker Compose 需要一个固定值，需要手动修改
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public"

# --- Docker Specific ---
# 生产环境设置为 false
RUN_SEED=true

# --- JWT Configuration ---
JWT_SECRET=your-super-secret-key-that-is-long-and-random
JWT_EXPIRATION_TIME=3600s
JWT_REFRESH_SECRET=another-super-secret-for-refresh-token
JWT_REFRESH_EXPIRATION_TIME=7d

# --- WeChat Mini Program ---
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_appsecret

# --- Upload Configuration ---
UPLOAD_STORAGE_TYPE=local
UPLOAD_LOCAL_PATH=./uploads
UPLOAD_BASE_URL=http://localhost:80/images
UPLOAD_MAX_FILE_SIZE=10485760

# --- OSS Configuration ---
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your-access-key-id
OSS_ACCESS_KEY_SECRET=your-access-key-secret
OSS_BUCKET=your-bucket-name
OSS_CUSTOM_DOMAIN=
